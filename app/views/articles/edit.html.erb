<h1 class="text-center">Edit article</h1>

<!--  Форма для редактирования статьи -->
<%= form_for :article, url: article_path(@article), method: :patch do |f| %>

  <p>
    <%= f.label :title %> <br> 
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %> <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>